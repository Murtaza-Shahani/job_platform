<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Listings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/style.css">

    
</head>
<body>
    <div class="container my-3">
        <h1 class="text-center  mb-5" style="color: white;">Job Listings</h1>
        <div class="row">
            <% listings.forEach(function(listing) { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= listing.title %></h5>
                            <p class="card-text"><%= listing.description %></p>
                            <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>
                            <p class="card-text"><strong>Salary:</strong> <%= listing.salary ? listing.salary : 'N/A' %></p>
                            <p class="card-text"><strong>Category:</strong> <%= listing.category %></p>
                            <p class="card-text"><strong>Requirements:</strong> <%= listing.requirements %></p>
                            <p class="card-text"><small class="text-muted">Posted on <%= listing.createdAt.toDateString() %></small></p>
                            
                            <div class="d-flex justify-content-between">
                                <a href="/apply/<%= listing._id %>" class="btn btn-success">Apply Now</a>
                        
                                    <a href="/update/<%= listing._id %>" class="btn btn-primary">Update</a>
                                    <a href="/delete/<%= listing._id %>" class="btn btn-danger">Delete</a>
                                
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
